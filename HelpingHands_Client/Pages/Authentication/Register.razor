@page "/register"

<div class="wrapper">
    <h2 class="text-primary">Registration</h2>
   <EditForm Model="RegisterationRequest" OnValidSubmit="RegisterUser" class="pt-4">
    <DataAnnotationsValidator/>
     @*    @if (ShowRegistrationErrors)
        {
            <div>
                @foreach (var error in Errors)
                {
                    <p class="text-danger text-center">@error</p>
                }
            </div>
        } *@
        <div class="input-box pb-2">
            <InputText @bind-Value="RegisterationRequest.FirstName" type="text" class="form-control" placeholder="Enter your FirstName" />
            <ValidationMessage For="(()=>RegisterationRequest.FirstName)" />
        </div>
        <div class="input-box pb-2">
            <InputText @bind-Value="RegisterationRequest.LastName" type="text" class="form-control" placeholder="Enter your LastName" />
            <ValidationMessage For="(()=>RegisterationRequest.LastName)" />
        </div>
        <div class="input-box pb-2">
            <InputText @bind-Value="RegisterationRequest.Address" type="text" class="form-control" placeholder="Enter Your Address" />
            <ValidationMessage For="(()=>RegisterationRequest.Address)" />
        </div>
        <div class="input-box pb-2 input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> +91</span>
            </div>
            <InputText @bind-Value="RegisterationRequest.PhoneNumber" type="Number" class="form-control" placeholder="Enter Your PhoneNumber" />
            <ValidationMessage For="(()=>RegisterationRequest.PhoneNumber)" />
        </div>
        <div class="input-box pb-2">
            <InputText @bind-Value="RegisterationRequest.Email" type="Email" class="form-control" placeholder="Enter your Email" />
            <ValidationMessage For="(()=>RegisterationRequest.Email)" />
        </div>
        <div class="input-box pb-2">
            <InputText @bind-Value="RegisterationRequest.Password" type="PassWord" class="form-control" placeholder="Create password" />
            <ValidationMessage For="(()=>RegisterationRequest.Password)" />
        </div>
        <div class="input-box pb-2">
            <InputText @bind-Value="RegisterationRequest.ConfirmPassword" type="PassWord" class="form-control" placeholder="Confirm password" />
            <ValidationMessage For="(()=>RegisterationRequest.ConfirmPassword)" />
        </div>

        <div class="policy">
            <input type="checkbox">
            <h3>I accept all terms & condition</h3>
        </div>
        <div class="input-box button">
            <button type="submit" class="btn btn-success btn-block"><i class="bi bi-person-plus-fill"></i> Register Now</button> 
        </div>
        <div class="text">
            <h3>Already have an account? <a href="login">Login now</a></h3>
        </div>
    </EditForm>
</div>


